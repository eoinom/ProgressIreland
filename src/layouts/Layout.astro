---
import Footer from '@/components/footer/Footer.vue';
import HeaderDesktop from '@/components/header/HeaderDesktop.vue';
import HeaderMobile from '@/components/header/HeaderMobile.vue';
import { headerLinks } from '@/components/header/headerLinks.js';

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<html
  lang='en'
  class='scroll-smooth'
>
  <head>
    <meta charset='utf-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <meta
      name='theme-color'
      content='rgba(250, 250, 250, 1)'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <title>{title}</title>
  </head>
  <body>
    <HeaderMobile
      client:load
      links={headerLinks}
      class='lg:hidden'
    />
    <HeaderDesktop
      client:load
      links={headerLinks}
      class='hidden lg:block'
    />

    <div class='bg-charcoal-lightest px-pi-10 lg:px-pi-20'>
      <img
        src='/hero-triangles-mbl.svg'
        alt='Graphic with multiple coloured triangles'
        class='sm:hidden w-full'
      />
      <img
        src='/hero-triangles-tablet.svg'
        alt='Graphic with multiple coloured triangles'
        class='hidden sm:block lg:hidden w-full'
      />
      <img
        src='/hero-triangles-desktop.svg'
        alt='Graphic with multiple coloured triangles'
        class='hidden lg:block w-full'
      />
    </div>

    <slot />

    <Footer
      id='contact'
      client:load
    />
  </body>
</html>
